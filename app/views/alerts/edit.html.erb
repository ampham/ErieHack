<h1>Edit Alert Status</h1>

<%= form_for(@alert) do |f| %>

  <div class="field">
    <%= f.label :id %>: <%= @alert.id %>
  </div>

  <div class="field">
    <%= f.label :message %>: <%= @alert.message %>
  </div>

  <div class="field">
    <%= f.label :address %>: <%= @alert.address %>
  </div>

  <div class="field">
    <%= f.label :phone %>: <%= @alert.phone %>
  </div>

  <div class="field">
    <%= f.label :created_at %>: <%= @alert.created_at.strftime("%B %d, %Y") %>
  </div>

  <div class="field">
    <%= f.label :status %>
    <% # http://stackoverflow.com/questions/21287573/showing-current-value-in-select-tag  %>
    <%= f.select(:status, options_for_select(StatusOption.all.collect { |s| [s.name, s.id] }, 
    	@alert.status )) %>
  </div>

  <div class="field">
    <%= f.label :notes %>
    <%= f.text_area :notes %>
  </div>

	<div class="actions">
    <%= f.submit %>
  </div>
<% end %>