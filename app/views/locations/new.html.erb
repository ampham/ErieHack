<% if logged_in? %>

	<%= form_for @location do |f| %>
		<%= render 'shared/location_error_messages', object: f.object %>
		<div class="form-group">
			<%= f.label :title, class: 'control-label' %>
			<%= f.text_field :title, class: 'form-control' %>
		</div>

		<div class="form-group">
			<%= f.label :description, class: 'control-label' %>
			<%= f.text_area :description, class: 'form-control', rows: 3 %>
		</div>

		<div class="form-group">
			<%= f.label :stream_class, class: 'control-label' %>
			<%= f.text_field :stream_class, class: 'form-control' %>
		</div>

		<div class="form-group">
			<%= f.label :quality_issues, class: 'control-label' %>
			<%= f.text_area :quality_issues, class: 'form-control', rows: 3 %>
		</div>

		<%= f.submit 'Save', class: 'btn btn-primary' %>
	<% end %>

<% else %>
	
	<h1>Nope.</h1>

<% end %>