<h1>Water Quality Reports</h1>
<% row = 0 %>
<table>
	<thead>
		<tr>
		  <th>ID</th>
		  <th>Date Submitted</th>
		  <th>Alert</th>
		  <th>Status</th>
		  <th>Address</th>
		  <th>Customer Name</th>
		  <th colspan="3"></th>
		</tr>
	</thead>
	<% @reports.each do |report| %>
			<td><%= report.id %></td>
			<td><%= report.created_at.strftime("%B %d, %Y") %></td>
			<td><%= report.short_version %></td>
			<td><%= report.get_status %></td>
			<td><%= report.address %></td>
			<td><%= report.customer_name %></td>
			<td><%= link_to 'Details', edit_report_path(report) %></td>
		</tr>
	<% end %>
</table>